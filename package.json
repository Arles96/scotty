{
  "name": "Scotty",
  "version": "2.0.0",
  "description": "Meteor React boilerplate",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint --silent",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "bcrypt": "^0.8.7",
    "meteor-node-stubs": "~0.2.3",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "s-grid": "^1.1.2"
  },
  "devDependencies": {
    "eslint": "^2.10.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-meteor": "^3.5.2",
    "eslint-plugin-react": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juliancwirko/scotty.git"
  },
  "author": "Julian Ä†wirko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/juliancwirko/scotty/issues"
  },
  "homepage": "https://github.com/juliancwirko/scotty#readme",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "^meteor/"
          ]
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
